

{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "types":["vite/client"],
    "moduleResolution": "NodeNext",
    "lib": ["ES2020" , "DOM"],
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx":"react-jsx",
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true
  },
  "include": ["backend/src/**/*", "src"]
}






